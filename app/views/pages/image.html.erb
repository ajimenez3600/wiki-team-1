<%= image_tag(@image) %>
<div class="card">
  <ul class = "list-group list-group-flush">
    <li class = "list-group-item"> <%= @image.blob.filename %> </li>
    <li class = "list-group-item"> <%= @image.blob.created_at %> </li>
    <li class = "list-group-item"> <%= number_to_human_size(@image.blob.byte_size) %> </li>
    <li class = "list-group-item"> <%= @image.blob.uploader %> </li>
    <% if @page.comments %>
        <li class = "list-group-item"> <%= @page.comments %>  </li>
    <% end %>
    </li>
  </ul>
</div>