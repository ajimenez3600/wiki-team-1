<h1><%= @page.title %></h1>

<p>
  <% if @page.locked? %>
  <strong>This article is locked from editing</strong>
  <% end %>
</p>

<p><%= @page.body.html_safe %></p>

<% if @page.locked? %>
<strong>This article has been locked from editing</strong>
<% else %>
<br>
<button class="btn btn-secondary" type = "button">
  <%= link_to 'Edit', edit_page_path(@page), class: 'link-to-color' %>
</button>
<% end %>

<button class="btn btn-secondary" type = "button">
  <%= link_to 'History', "/pages/#{@page.title}/history", class: 'link-to-color' %> 
</button>

<button class="btn btn-secondary" type = "button">
  <%= link_to 'Back', pages_path, class: 'link-to-color' %>
</button>
<%= link_to "New file", new_file_upload_path %>
<br><br>
  <table border="3">
    <thead>
      <tr>
        <th>File Name</th>
        <th>Download link</th>
        <th>Action</th>
      </tr>
    </thead>

  <tbody>
    <% @file_upload.each do |file_upload| %>
    <tr>
      <td><%=file_upload.name%></td>
      <td><%=link_to "Download", file_upload.attachment_url %></td>
      <td><%=link_to "Delete", file_upload, method::delete, confirm: "Are you sure you want to delete {file_upload.name}?"%></td>
    </tr>
    <% end %>
  </tbody>

</table>